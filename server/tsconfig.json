{
  "compilerOptions": {
    /* Projects */
    "incremental": true, // Speeds up subsequent builds

    /* Language and Environment */
    "target": "ES2019", // Ensures compatibility with Node.js on Render
    "lib": ["ES2019"], // Includes standard library for ES2019

    /* Modules */
    "module": "CommonJS", // Compatible with Node.js module system
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Emit */
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": false, // Keeping comments can be useful for debugging
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true // Checking library files for better type safety
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist from source control
}
